@model DataImporter.Web.Models.Group.EditGroupModel
@{
    ViewData["Title"] = "Edit An Existing Group";
}
<!-- Content Header (Page header) -->

<div class="row mb-0 d-flex justify-content-between h-100 align-items-center">
    <div class="col-sm-6">
        <h4>@ViewData["Title"]</h4>
    </div>
    <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right px-0">
            <li class="breadcrumb-item">
                <a href="/">Dashboard</a>
            </li>
            <li class="breadcrumb-item active">Edit Group</li>
        </ol>
    </div>
</div>


<div class="row mb-0">
    <div class="col-md-12">
        <div class="card pb-0">
            <div class="card-body pb-3">
                @if (!ViewData.ModelState.IsValid)
                {
                    <div asp-validation-summary="All" class="alert alert-danger text-left pb-0" role="alert"></div>
                }
                <!-- form start -->
                <form class="form-horizontal" method="post" asp-controller="Group"
                      asp-action="Edit" asp-antiforgery="true">
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group row mb-5">
                        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" asp-for="Name"
                                   id="groupname" placeholder="Group Name">
                        </div>
                    </div>
                    <div class="d-flex justify-content-end">
                        <a asp-action="Index" asp-controller="Group"
                           class="btn btn-secondary btn-lg shadow-3">
                            Cancel
                        </a>
                        <button type="submit" class="btn btn-lg shadow-3 btn-info mx-0">Edit</button>
                    </div>
                </form>
                <!-- form end -->
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    @if (ViewBag.Success != null)
        {
            <script>
                toastr.options = toastrOptions;
                toastr.success('@ViewBag.Success');
            </script>
        }
}